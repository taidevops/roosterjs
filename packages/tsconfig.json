{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "../dist",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "rootDir": ".",
        "composite": true,
        "lib": ["es6", "dom"]
    },

    "references": [
        {
            "path": "roosterjs/tsconfig.child.json"
        }
    ],
    "include": [],
    "typedocOptions": {
        "entryPoints": ["roosterjs/lib/index.ts"],
        "plugin": ["typedoc-plugin-external-module-map"],
        "out": "../dist/deploy/docs",
        "readme": "../reference.md",
        "name": "RoosterJs API Reference",
        "excludeExternals": true,
        "exclude": "**/*.d.ts",
        "excludePrivate": true,
        "includeVersion": true,
        "external-modulemap": ".*\\/(roosterjs[a-zA-Z0-9\\-]*)\\/lib\\/"
    }
}
